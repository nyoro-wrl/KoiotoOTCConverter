<Window x:Name="FormMain" x:Class="KoiotoOTCConverter.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiotoOTCConverter"
        mc:Ignorable="d"
        Title="設定" Height="180" Width="369.5">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Label Content="OFFSETの補正値" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxOFFSET" HorizontalAlignment="Left" Height="23" Margin="110,12,0,0" Text="0" VerticalAlignment="Top" Width="120" PreviewTextInput="TextBoxOFFSET_PreviewTextInput" PreviewMouseWheel="TextBoxOFFSET_PreviewMouseWheel" KeyDown="TextBox_KeyDown"/>
        <Button x:Name="Save" Content="保存" HorizontalAlignment="Left" Margin="156,102,0,0" VerticalAlignment="Top" Width="88" Height="26" Click="Save_Click"/>
        <Button x:Name="Cancel" Content="キャンセル" HorizontalAlignment="Left" Margin="252,102,0,0" VerticalAlignment="Top" Width="88" Height="26" Click="Cancel_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="14,41,0,0" VerticalAlignment="Top" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"><Run Text="プラス：譜面のタイミングが遅くなります"/><LineBreak/><Run Text="マイナス：譜面のタイミング"/><Run Text="が早くなります"/><LineBreak/><Run Text="※太鼓さん次郎2から変換する場合は"/><Run Text=" "/><Run Text="0.016"/><Run Text=" "/><Run Text="がオススメ"/></TextBlock>
        <Button x:Name="Reset" Content="既定値に戻す" HorizontalAlignment="Left" Margin="14,102,0,0" VerticalAlignment="Top" Width="88" Height="26" Click="Reset_Click"/>
    </Grid>
</Window>
